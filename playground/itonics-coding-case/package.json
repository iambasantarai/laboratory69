{
  "name": "itonics-coding-case",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "nuke": "rimraf dist",
    "ignite": "node ./dist/index.js",
    "format:check": "prettier --check \"./**/*.{js,ts}\"",
    "format:fix": "prettier --write \"./**/*.{js,ts}\"",
    "typeorm": "npx ts-node ./node_modules/typeorm/cli.js",
    "migration:run": "npm run typeorm migration:run -- -d ./src/db/config/typeorm.config.ts",
    "migration:generate": "npm run typeorm -- -d ./src/db/config/typeorm.config.ts migration:generate ./src/db/migrations/$npm_config_name",
    "migration:create": "npm run typeorm -- migration:create ./src/db/migrations/$npm_config_name",
    "migration:revert": "npm run typeorm -- -d ./src/db/config/typeorm.config.ts migration:revert"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.14.1",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "dotenv": "^16.5.0",
    "pg": "^8.14.1",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.22",
    "winston": "^3.17.0"
  }
}
